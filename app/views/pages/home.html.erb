<!-- Hero Section -->
<div class="bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 mb-4">
        <h1 class="display-4 fw-bold">Hi, I’m Trent.</h1>
        <p class="lead">Ruby on Rails developer building real-world apps.</p>
        <a href="/projects" class="btn btn-danger btn-lg me-2">View Projects</a>
        <a href="/contact" class="btn btn-outline-secondary btn-lg">Get in Touch</a>
      </div>
      <div class="col-md-6">
        <%= image_tag "ruby_curly.png", class: "img-fluid w-50 ms-5", alt: "Rails illustration" %>
      </div>
    </div>
  </div>
</div>

<!-- Project Preview Section -->
<div class="container my-5">
  <h2 class="mb-4 text-center">Featured Projects</h2>
  <div class="row g-4">
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="Goal Board">
        <div class="card-body">
          <h5 class="card-title">Goal Board</h5>
          <p class="card-text">Productivity app with real-time Turbo updates.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="Producer Stack">
        <div class="card-body">
          <h5 class="card-title">Producer Stack</h5>
          <p class="card-text">Community platform for uploading and sharing music.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <img src="https://via.placeholder.com/400x250" class="card-img-top" alt="E-commerce site">
        <div class="card-body">
          <h5 class="card-title">Queens Of Bling</h5>
          <p class="card-text">Custom e-commerce storefront for a small business.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Call-to-Action -->
<div class="bg-danger text-white text-center py-5">
  <h2 class="mb-3">Looking for a Rails Developer?</h2>
  <p class="lead mb-4">Let’s build something great together.</p>
  <a href="/contact" class="btn btn-light btn-lg">Contact Me</a>
</div>
